syntax on			# 打開語法highlight
filetype on			# 檢測文件類型
set number			# 行號顯示(nu)
set ruler			# 底部行號顯示
set nobackup		# 不備份
set smartindent		# 智能選擇對齊方式
set showmatch		# 當輸入左括號時，自動配對右括號
set tabstop=4		# 一個tab等於多少空格(ts)
set shiftwidth=4	# 自動縮進時，縮進為4格(sw)
set backspace=2		# same as "set backspace=indent,eol,start", 預設只能刪除本次Insert mode下Insert的內容
